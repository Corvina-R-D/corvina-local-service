{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "plugins": [
        { "transform": "@nestia/core/lib/transform" },
        { "transform": "typia/lib/transform" }
    ],
    "strict": true,
    "types": [
      "@modyfi/vite-plugin-yaml/modules"
    ],
  },
  "include": [
    "src/**/*"
  ]
}