{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strict": true,
    "types": [
      "@modyfi/vite-plugin-yaml/modules"
    ],
  },
  "include": [
    "src/**/*",
    "src/services/**/*",
  ]
}